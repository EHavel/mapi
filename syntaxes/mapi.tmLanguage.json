{
  "scopeName": "source.mapi",
  "fileTypes": [".mapi"],
  "name": "mapi",
  "patterns": [
    {
      "match": "^\\s*#.*$",
      "name": "entity.name.function.mapi"
    },
    {
      "match": "(\\?|:|=)",
      "name": "keyword.operator.mapi"
    },
    {
      "match": "\"[^\"]*\"",
      "name": "string.quoted.double.mapi"
    },
    {
      "match": "(string|number|boolean|object|integer|enum|array)",
      "name": "support.type.mapi"
    },
    {
      "match": "//.*$",
      "name": "comment.line.double-slash.mapi"
    },
    {
      "match": "\\$\\w+",
      "name": "variable.parameter.mapi"
    }
  ]
}
